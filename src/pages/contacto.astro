---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Contacto - Nadamos con la Diversidad">
  <Header />
  <main class="flex-grow py-16 px-4">
    <div class="container mx-auto max-w-4xl">
      <h1 class="text-4xl md:text-5xl font-bold text-center mb-12 text-white">
        Contacto
      </h1>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-gray-800 p-8 rounded-lg">
          <h2 class="text-2xl font-semibold mb-6 text-white">Información de contacto</h2>
          <div class="space-y-4 text-gray-300">
            <div>
              <p class="font-semibold text-white mb-2">Email</p>
              <a 
                href="mailto:contacto@nadamosdiversidad.org" 
                class="text-rainbow-3 hover:text-rainbow-2 transition-colors"
              >
                contacto@nadamosdiversidad.org
              </a>
            </div>
            <div>
              <p class="font-semibold text-white mb-2">Teléfono</p>
              <a 
                href="tel:+34600123456" 
                class="text-rainbow-3 hover:text-rainbow-2 transition-colors"
              >
                +34 600 123 456
              </a>
            </div>
            <div>
              <p class="font-semibold text-white mb-2">Ubicación</p>
              <p>Canarias, España</p>
            </div>
          </div>
        </div>
        
        <div class="bg-gray-800 p-8 rounded-lg">
          <h2 class="text-2xl font-semibold mb-6 text-white">Envíanos un mensaje</h2>
          <form 
            action={`mailto:contacto@nadamosdiversidad.org?subject=Consulta desde la web&body=Hola,%0D%0A%0D%0A`}
            method="get"
            class="space-y-4"
          >
            <div>
              <label for="nombre" class="block text-white font-semibold mb-2">Nombre *</label>
              <input 
                type="text" 
                id="nombre" 
                name="nombre" 
                required
                class="w-full px-4 py-2 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-rainbow-3"
              />
            </div>
            <div>
              <label for="email" class="block text-white font-semibold mb-2">Email *</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                class="w-full px-4 py-2 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-rainbow-3"
              />
            </div>
            <div>
              <label for="mensaje" class="block text-white font-semibold mb-2">Mensaje *</label>
              <textarea 
                id="mensaje" 
                name="mensaje" 
                rows="5"
                required
                class="w-full px-4 py-2 bg-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-rainbow-3"
              ></textarea>
            </div>
            <button 
              type="submit"
              class="w-full bg-rainbow-3 text-gray-900 font-bold px-8 py-4 rounded-lg hover:bg-rainbow-2 transition-colors"
            >
              Enviar mensaje
            </button>
          </form>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</BaseLayout>

